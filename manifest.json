{
    "name": "Taskly",
    "description": "A Todo Extension To Keep Your Productivity On-check and Help You Complete Tasks Effectively",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": ["storage"],
    "action": {
        "default_title": "Click to launch Taskly",
        "default_popup": "/popup/popup.html",
        "default_icon": "images/icon128.png"
    },
    "icons" : {
        "16" : "/images/icon16.png",
        "32" : "/images/icon32.png",
        "48" : "/images/icon48.png",
        "128" : "/images/icon128.png"
    }
}
